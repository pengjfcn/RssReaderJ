<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg_more"
              android:orientation="vertical">

    <TextView
        android:id="@+id/more_tv_collect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="我的收藏"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/more_tv_subscribe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="我的订阅"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自动下载"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <FrameLayout
            android:id="@+id/more_tv_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/more_tv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭"
                android:textColor="@color/darkgray"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/more_tv_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打开"
                android:textColor="@color/darkgray"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/more_tv_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="当前缓存173MB"
            android:textColor="@color/darkgray"/>
    </RelativeLayout>
</LinearLayout>