<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/rss_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/ic_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rss_iv_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rss_tv_rssname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rssname"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_divide">
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rss_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/rss_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rss_tv_title"
                android:singleLine="true"
                android:text="description"
                android:textColor="@color/darkgray"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/rss_iv_collect"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:scaleType="center"
                android:src="@mipmap/ic_collect_normal"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>